<?xml version="1.0"?>
<robot name="reto_robot">

  <!-- ========================================= -->
  <!-- DEFINICION DE MATERIALES Y COLORES       -->
  <!-- ========================================= -->
  
  <material name="blue">
    <color rgba="0.0 0.0 1.0 1.0"/>
  </material>
  
  <material name="red">
    <color rgba="1.0 0.0 0.0 1.0"/>
  </material>
  
  <material name="green">
    <color rgba="0.0 1.0 0.0 1.0"/>
  </material>
  
  <material name="yellow">
    <color rgba="1.0 1.0 0.0 1.0"/>
  </material>
  
  <material name="gray">
    <color rgba="0.7 0.7 0.7 1.0"/>
  </material>

  <!-- ========================================= -->
  <!-- ENLACE BASE - Base del robot             -->
  <!-- ========================================= -->
  
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.4 0.3 0.1"/>
      </geometry>
      <material name="gray"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.4 0.3 0.1"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.083" ixy="0.0" ixz="0.0" 
               iyy="0.083" iyz="0.0" 
               izz="0.083"/>
    </inertial>
  </link>

  <!-- ========================================= -->
  <!-- ENLACE 1 - Torre principal               -->
  <!-- ========================================= -->
  
  <link name="torre_link">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.5"/>
      </geometry>
      <material name="blue"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.5"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <mass value="2.0"/>
      <inertia ixx="0.042" ixy="0.0" ixz="0.0" 
               iyy="0.042" iyz="0.0" 
               izz="0.013"/>
    </inertial>
  </link>

  <!-- ========================================= -->
  <!-- UNION 1 - Articulaci贸n giratoria base    -->
  <!-- ========================================= -->
  
  <joint name="base_to_torre" type="continuous">
    <parent link="base_link"/>
    <child link="torre_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.1"/>
    <limit effort="100" velocity="2.0"/>
  </joint>

  <!-- ========================================= -->
  <!-- ENLACE 2 - Brazo horizontal              -->
  <!-- ========================================= -->
  
  <link name="brazo_link">
    <visual>
      <origin xyz="0.15 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
      <material name="red"/>
    </visual>
    
    <collision>
      <origin xyz="0.15 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0.15 0 0" rpy="0 1.5708 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.008" ixy="0.0" ixz="0.0" 
               iyy="0.025" iyz="0.0" 
               izz="0.025"/>
    </inertial>
  </link>

  <!-- ========================================= -->
  <!-- UNION 2 - Articulaci贸n giratoria brazo   -->
  <!-- ========================================= -->
  
  <joint name="torre_to_brazo" type="revolute">
    <parent link="torre_link"/>
    <child link="brazo_link"/>
    <origin xyz="0 0 0.4" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="50" velocity="1.0"/>
    <dynamics damping="0.05" friction="0.05"/>
  </joint>

  <!-- ========================================= -->
  <!-- ENLACE 3 - Antebrazo                     -->
  <!-- ========================================= -->
  
  <link name="antebrazo_link">
    <visual>
      <origin xyz="0.1 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.2"/>
      </geometry>
      <material name="green"/>
    </visual>
    
    <collision>
      <origin xyz="0.1 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.2"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0.1 0 0" rpy="0 1.5708 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" 
               iyy="0.009" iyz="0.0" 
               izz="0.009"/>
    </inertial>
  </link>

  <!-- ========================================= -->
  <!-- UNION 3 - Articulaci贸n giratoria antebrazo -->
  <!-- ========================================= -->
  
  <joint name="brazo_to_antebrazo" type="revolute">
    <parent link="brazo_link"/>
    <child link="antebrazo_link"/>
    <origin xyz="0.3 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="30" velocity="2.0"/>
    <dynamics damping="0.03" friction="0.03"/>
  </joint>

  <!-- ========================================= -->
  <!-- ENLACE 4 - Efector final (pinza)         -->
  <!-- ========================================= -->
  
  <link name="efector_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.06 0.04"/>
      </geometry>
      <material name="yellow"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.06 0.04"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" 
               iyy="0.0001" iyz="0.0" 
               izz="0.0001"/>
    </inertial>
  </link>

  <!-- ========================================= -->
  <!-- UNION 4 - Articulaci贸n giratoria efector -->
  <!-- ========================================= -->
  
  <joint name="antebrazo_to_efector" type="continuous">
    <parent link="antebrazo_link"/>
    <child link="efector_link"/>
    <origin xyz="0.2 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <dynamics damping="0.02" friction="0.02"/>
    <limit effort="10" velocity="3.0"/>
  </joint>

</robot>
